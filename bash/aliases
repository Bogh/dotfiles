alias l="ls -lah"
alias www="cd ~/www"
alias www2="cd /var/www"
alias ..="cd .."
alias shut="sudo shutdown -h now"
alias reload="source ~/.bashrc"
alias del="rm -rf"
alias r="rails"

# Git aliases
alias gb="git branch"
alias gba="git branch -a"
alias gc="git commit -v"
alias gd="git diff | gedit"
alias gl="git pull"
alias gp="git push"
alias gst="git status"

function take() {
    mkdir $1
    cd $1
}

